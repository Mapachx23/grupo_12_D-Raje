<!DOCTYPE html>
<html>
<html lang="es">

<%- include('partials/head') %> 
<body>
    <%- include('partials/header') %> 
    <div class="card" style="width: 30%;">
        <img class="card-img-top" src="/images/productos/<%= producto.image %>.jpg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= producto.nombre%></h5>
          <p class="card-text"><%= producto.descripcion %> </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= producto.marca %></li>
          <li class="list-group-item">$<%= producto.precio %></li>
          <li class="list-group-item"><%= producto.descuento %>  % OFF</li>
        </ul>
        <div class="card-body">
          <a href="/products/edit/<%= producto.id%>" class="card-link">
            <button type="button" class="btn btn-warning">Editar
              <i class="far fa-edit"></i>  
            </button>
          </a> 
        </div>
       <div>
        <form action="/products/eliminar/ <%= producto.id %>?_method=DELETE" method="POST" class="card-link">
          <button type="submit" class="btn btn-danger">Eliminar
            <i class="fas fa-trash"></i>
          </button>
        </form> 
       </div>
      </div>
    <%- include('partials/footer') %> 
</body>

</html>