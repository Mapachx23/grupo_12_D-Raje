<!DOCTYPE html>
<html>
<html lang="es">

<%- include('partials/head') %> 
<body>    
  <%- include('partials/header') %> 
    <section>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="contenido">
            <figure>
              <img src="/images/productos/<%= producto.image %>.jpg" alt="Card image cap">
            </figure>
            <article>
                <h5 class="card-title"><%= producto.nombre%></h5>
                <p class="card-text"><%= producto.descripcion %> </p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= producto.marca %></li>
                <li class="list-group-item">$<%= producto.precio %></li>
                <li class="list-group-item"><%= producto.descuento %>  % OFF</li>
              </ul>
            <article>
          </div>
        </div>
        <div class = "botones">
          <form action="/products/eliminar/ <%= producto.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Eliminar</button>
          </form>

          <a class="btn btn-primary" href="/products/edit/<%=producto.id %>" role="button">Editar</a>
        </section>
  <%- include('partials/footer') %> 
</body>

</html>